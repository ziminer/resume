\renewcommand{\bfseries}{\headingfont\color{headercolor}}
\newcommand{\entry}[4]{%
  \begin{minipage}[t]{13.0cm}
    #1\hspace{2.5mm}
    \textbf{#2\color{headercolor}}%
    \hfill%
    {\footnotesize\addfontfeature{Color=base0} #3}%
  \end{minipage}\\
  \begin{minipage}[t]{12.0cm}
    \vspace{0mm}
    #4\vspace{2.5mm}%
  \end{minipage}\\
  }

\newcommand{\hlref}[2]{%
